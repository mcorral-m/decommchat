# Kusto MCP Configuration
# Copy this file to .env and fill in your actual values

# Azure DCM Kusto Cluster
KUSTO_SERVICE_URI_AZUREDCM=https://azuredcm.kusto.windows.net
KUSTO_DATABASE_AZUREDCM=AzureDCMDb

# One Capacity Follower Kusto Cluster  
KUSTO_SERVICE_URI_ONECAPACITY=https://onecapacityfollower.centralus.kusto.windows.net
KUSTO_DATABASE_ONECAPACITY=Shared

# Azure CM Kusto Cluster
KUSTO_SERVICE_URI_AZURECM=https://azurecm.kusto.windows.net
KUSTO_DATABASE_AZURECM=AzureCM

# Default database for MCP (used when database not specified)
KUSTO_DATABASE=AzureDCMDb

# Authentication (if required)
# AZURE_CLIENT_ID=your-client-id
# AZURE_CLIENT_SECRET=your-client-secret  
# AZURE_TENANT_ID=your-tenant-id
